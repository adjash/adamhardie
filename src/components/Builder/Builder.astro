---
import BuilderStyles from "./BuilderStyles.astro";
import Card from "./Card.astro";
import CardGrid from "./CardGrid.astro";
import DrawerNavigation from "./DrawerNavigation.astro";

---
<BuilderStyles />
<aside>
  <!-- Sidebar navigation or additional information -->
</aside>

<main>
  <!-- Main content area -->
  <section>
    <h2>Dashboard Overview</h2>
    <p>Welcome to the admin dashboard! Here you can get an overview of various statistics and metrics related to your website or application.</p>
    <!-- Add your dashboard widgets or summary here -->
    <div class="dashboard-widgets">
      <div class="widget">
        <h3>Users</h3>
        <p>Total users: 1000</p>
      </div>
      <div class="widget">
        <h3>Revenue</h3>
        <p>Total revenue: $10,000</p>
      </div>
      <div class="widget">
        <h3>Orders</h3>
        <p>Total orders: 500</p>
      </div>
      <div class="widget">
        <h3>Page Views</h3>
        <p>Total page views: 50,000</p>
      </div>
      <div class="widget">
        <h3>Conversion Rate</h3>
        <p>Conversion rate: 5%</p>
      </div>
      <div class="widget">
        <h3>Products</h3>
        <p>Total products: 200</p>
      </div>
    </div>
  </section>

  <section>
    <h2>User Management</h2>
    <p>Manage your users and their roles here.</p>
    <!-- Add user management related content or actions here -->
    <div class="user-management">
      <div class="user">
        <div class="user-info">
          <span class="user-id">1</span>
          <h4 class="user-name">John Doe</h4>
          <p class="user-email">johndoe@example.com</p>
          <p class="user-role">Admin</p>
        </div>
        <div class="user-actions">
          <button>Edit</button>
          <button>Delete</button>
        </div>
      </div>
      <div class="user">
        <div class="user-info">
          <span class="user-id">2</span>
          <h4 class="user-name">Jane Smith</h4>
          <p class="user-email">janesmith@example.com</p>
          <p class="user-role">User</p>
        </div>
        <div class="user-actions">
          <button>Edit</button>
          <button>Delete</button>
        </div>
      </div>
      <!-- Add more user blocks as needed -->
    </div>
  </section>

  <section>
    <h2>Settings</h2>
    <p>Configure your application settings here.</p>
    <!-- Add settings related content or actions here -->
    <div class="settings">
      <!-- Add settings components or actions here -->
    </div>
  </section>
</main>