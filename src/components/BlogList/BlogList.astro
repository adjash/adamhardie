---
const posts = await Astro.glob('../../pages/blogs/*.md*');
---
{!posts ? 
    <div>
        <h1>No Posts</h1>
    </div> : posts.map((post) => (
    <article>
        <img src={post.frontmatter.image.url} alt={post.frontmatter.image.alt}>
        <h3>{post.frontmatter.title}</h3>
        <p>{post.frontmatter.description}</p>
        <a href={post.url}>Read More</a>
    </article>  
))}